@page "/blazor-test"

<h1>Blazor Component Test</h1>

<p>This is a minimal Blazor component to test if Blazor is working correctly.</p>

<p>Counter: @counter</p>

<button class="btn btn-primary" @onclick="IncrementCounter">Increment</button>

@code {
    private int counter = 0;

    private void IncrementCounter()
    {
        counter++;
    }
}