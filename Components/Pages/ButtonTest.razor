@page "/button-test"

<h1>Basic Button Test</h1>

<div class="card p-4 m-4">
    <div>
        <p>Button clicked: @clickCount times</p>
        <p>Last error: @lastError</p>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary me-2" @onclick="IncrementCounter">Click Me</button>
        <button class="btn btn-warning" @onclick="@(() => clickCount = 0)">Reset</button>
    </div>
</div>

@code {
    private int clickCount = 0;
    private string lastError = "None";

    private void IncrementCounter()
    {
        try
        {
            clickCount++;
            Console.WriteLine($"Button clicked, count: {clickCount}");
        }
        catch (Exception ex)
        {
            lastError = ex.Message;
            Console.WriteLine($"Error: {ex.Message}");
        }
    }
}